{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runtime Smoke Gate Allowlist Schema",
  "description": "Schema for runtime smoke gate override entries",
  "type": "object",
  "required": ["version", "entries"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["issue_id", "owner", "expiry_date", "reason", "endpoint", "allowed_status_codes"],
        "properties": {
          "issue_id": {
            "type": "string",
            "description": "GitHub issue or incident ID (e.g., INC-2026-01-30-CORS, #123)",
            "pattern": "^(INC-|#)[A-Za-z0-9-]+$"
          },
          "owner": {
            "type": "string",
            "description": "Email or GitHub username of the owner responsible for fixing"
          },
          "expiry_date": {
            "type": "string",
            "format": "date",
            "description": "ISO 8601 date (YYYY-MM-DD) when this override expires"
          },
          "reason": {
            "type": "string",
            "description": "Clear explanation of why this override is needed"
          },
          "endpoint": {
            "type": "string",
            "description": "API endpoint path (e.g., /api/v1/planet-mark/dashboard)"
          },
          "allowed_status_codes": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 400,
              "maximum": 599
            },
            "description": "HTTP status codes that are temporarily allowed (4xx/5xx only)"
          }
        }
      }
    }
  }
}

# Application Settings
APP_NAME=Quality Governance Platform
APP_ENV=development
DEBUG=true

# SECURITY WARNING: Generate a strong secret key for production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=__CHANGE_ME__

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/quality_governance
DATABASE_ECHO=false

# JWT Authentication
# SECURITY WARNING: Generate a different secret key for JWT!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=__CHANGE_ME__
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure Blob Storage (optional, leave empty for local development)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=attachments

# Email Ingestion (optional, leave empty if not using complaints email ingestion)
EMAIL_IMAP_SERVER=
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=
EMAIL_PASSWORD=

# =============================================================================
# SMTP Email Configuration (Required for password reset emails)
# =============================================================================
# Configure these to enable password reset functionality
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=noreply@plantexpand.com
SMTP_PASSWORD=__CHANGE_ME__
FROM_EMAIL=noreply@plantexpand.com
FROM_NAME=Quality Governance Platform

# Frontend URL (used for password reset email links)
FRONTEND_URL=https://app-qgp-prod.azurestaticapps.net

# =============================================================================
# Azure AD / Microsoft Entra ID Configuration (Required for SSO)
# =============================================================================
# Backend: Used for validating Azure AD tokens
AZURE_CLIENT_ID=__YOUR_AZURE_APP_CLIENT_ID__
AZURE_TENANT_ID=__YOUR_AZURE_TENANT_ID__

# Frontend: Used for OAuth redirect flow (prefix with VITE_ for Vite exposure)
VITE_AZURE_CLIENT_ID=__YOUR_AZURE_APP_CLIENT_ID__
VITE_AZURE_AUTHORITY=https://login.microsoftonline.com/__YOUR_TENANT_ID__
VITE_AZURE_REDIRECT_URI=https://app-qgp-prod.azurestaticapps.net/login

# =============================================================================
# Azure AD App Registration Setup Guide
# =============================================================================
# 1. Go to Azure Portal > Azure Active Directory > App registrations
# 2. Click "New registration"
# 3. Name: "Quality Governance Platform" (or your preferred name)
# 4. Supported account types: "Accounts in this organizational directory only"
# 5. Redirect URI: Select "Single-page application (SPA)" and add:
#    - https://app-qgp-prod.azurestaticapps.net/login (production)
#    - https://app-qgp-prod.azurestaticapps.net/portal (portal SSO)
#    - http://localhost:3000/login (development)
#    - http://localhost:3000/portal (development portal)
# 6. After creation, go to "Authentication" and enable:
#    - ID tokens (for implicit and hybrid flows)
# 7. Copy the Application (client) ID to AZURE_CLIENT_ID and VITE_AZURE_CLIENT_ID
# 8. Copy the Directory (tenant) ID to AZURE_TENANT_ID and use in VITE_AZURE_AUTHORITY

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO

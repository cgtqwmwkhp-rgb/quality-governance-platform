# Application Settings
APP_NAME=Quality Governance Platform
APP_ENV=development
DEBUG=true

# SECURITY WARNING: Generate a strong secret key for production!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=__CHANGE_ME__

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/quality_governance
DATABASE_ECHO=false

# JWT Authentication
# SECURITY WARNING: Generate a different secret key for JWT!
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=__CHANGE_ME__
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure Blob Storage (optional, leave empty for local development)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=attachments

# Email Ingestion (optional, leave empty if not using complaints email ingestion)
EMAIL_IMAP_SERVER=
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=
EMAIL_PASSWORD=

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
